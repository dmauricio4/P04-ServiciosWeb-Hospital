	    <groupId>javax.json.bind</groupId>
	    <artifactId>javax.json.bind-api</artifactId>
	    <version>1.0</version>
	</dependency>
	
		<!-- https://mvnrepository.com/artifact/javax.persistence/javax.persistence-api -->
